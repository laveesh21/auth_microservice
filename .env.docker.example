# Docker Environment Variables Template
# Copy to .env.docker and configure

# Neon PostgreSQL Database
# Get from: https://console.neon.tech
DB_URL=jdbc:postgresql://your-host.aws.neon.tech:5432/neondb?sslmode=require
DB_USER=your_neon_username
DB_PASSWORD=your_neon_password

# JWT Configuration
JWT_SECRET=generate-random-secret-at-least-32-characters-long
JWT_EXPIRATION_MS=900000
JWT_REFRESH_EXPIRATION_MS=604800000

# Server Configuration
SERVER_PORT=8080
SPRING_PROFILE=prod

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000
